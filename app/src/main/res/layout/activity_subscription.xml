<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00BCD4">

        <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mín Mót (My Tournaments)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"/>

    <!-- List of subscribed teams & matches -->
    <ScrollView
        android:layout_width="380dp"
        android:layout_height="466dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/gamesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

        <!-- Subscribe Button (Shown when no teams are subscribed) -->
    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe to a Team"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/til_baka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:text="Til baka"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
