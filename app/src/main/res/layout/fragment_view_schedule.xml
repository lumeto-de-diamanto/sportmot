<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_margin="30dp"
    android:background="#eef"
    tools:context="com.example.sportmot.ui.tournament.fragment.ViewGameScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#eef"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/scheduleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Dagskrá Móts"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Game 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/game1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="23:25 - Team A vs Team B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 - 0"
                android:textSize="18sp"
                android:paddingEnd="8dp"/>

            <Button
                android:id="@+id/editScore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breyta" />
        </LinearLayout>

        <!-- Game 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/game2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="23:27 - Team C vs Team D"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 - 0"
                android:textSize="18sp"
                android:paddingEnd="8dp"/>

            <Button
                android:id="@+id/editScore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breyta" />
        </LinearLayout>

        <!-- Game 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/game3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="23:26 - Team E vs Team F"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 - 0"
                android:textSize="18sp"
                android:paddingEnd="8dp"/>

            <Button
                android:id="@+id/editScore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breyta" />
        </LinearLayout>

        <!-- Close Button -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Til baka" />

    </LinearLayout>
</FrameLayout>
