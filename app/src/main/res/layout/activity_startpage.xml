<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4">

    <!-- Title TextView centered at the top -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        android:text="Sportmót"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#0B0B0B"
        app:layout_constraintBottom_toTopOf="@id/login_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Button for 'Mín mót' centered below the title -->

    <!-- Button for 'Mót í dag' below 'Mín mót' -->


    <!-- Button for 'Næstu mót' below 'Mót í dag' -->


    <!-- Button for 'Gömul mót' below 'Næstu mót' -->

    <!-- Button for 'Login/signup' below 'Næstu mót' -->
    <Button
        android:id="@+id/login_page"
        android:layout_width="315dp"
        android:layout_height="115dp"
        android:layout_margin="30dp"
        android:padding="16dp"
        android:text="Login"
        android:textColor="#0B0B0B"
        android:textColorLink="#673AB7"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/signup_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/signup_page"
        android:layout_width="315dp"
        android:layout_height="115dp"
        android:layout_margin="30dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:text="Signup"
        android:textColor="#0B0B0B"
        android:textColorLink="#673AB7"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_page" />


</androidx.constraintlayout.widget.ConstraintLayout>
